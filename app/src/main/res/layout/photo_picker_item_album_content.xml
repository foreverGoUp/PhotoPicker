<?xml version="1.0" encoding="utf-8"?>
<com.ckc.photopicker.RectRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <ImageView
        android:id="@+id/photo_picker_iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/photo_picker_v_selected_shadow"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"/>
    <RelativeLayout
        android:id="@+id/photo_picker_rl_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/photo_picker_tv_selection_indicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:background="@drawable/photo_picker_bg_selection_indicator"
            android:gravity="center"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
</com.ckc.photopicker.RectRelativeLayout>